<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/search_edit_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_search_head"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="@string/search_object"
            android:textColor="#2DB6ED"
            android:visibility="gone"
            android:textSize="18sp" />

        <AutoCompleteTextView
            android:id="@+id/main_search_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:completionThreshold="1"
            android:dropDownVerticalOffset="1.0dip"
            android:hint="请输入桩号或设备号"
            android:imeOptions="actionSearch"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:paddingRight="37dip"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#BCB8B2"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/search_divider" />

        <TextView
            android:id="@+id/main_search"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
			android:textColor="#000"
            android:text="@string/menu_search"
            android:textSize="15sp" />
        
        <ImageView
	        android:id="@+id/main_search_cancel"
	        android:layout_height="30dp"
	        android:layout_width="30dp"
	        android:layout_weight="0"
	        android:layout_marginRight="8dp"
	        android:layout_marginLeft="8dp"
	        android:visibility="gone"
	        android:src="@drawable/search_clear" />
        
    </LinearLayout>

</LinearLayout>