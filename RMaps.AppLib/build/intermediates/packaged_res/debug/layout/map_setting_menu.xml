<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/new_list_bg">

      <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <ImageView
        android:id="@+id/pos_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/share_m" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />
     
     <ImageView
        android:id="@+id/map_menu_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/set_m" />

      <View
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="5dp" />
     
    <ImageView
        android:id="@+id/map_menu_track"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:src="@drawable/menu_track" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ImageView
        android:id="@+id/map_menu_layer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/overlay_m" />

</LinearLayout>